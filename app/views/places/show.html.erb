<h1> <%= @place["name"]%> </h1>

<p><a href="/places">Back to All Places</a></p>

<h2>Posts</h2>


<ul>
  <% for post in @posts %>
  
    <li>
    <h3><%= post["title"] %></h3>
    <p><%= post["posted_on"] %></p>
    <p><%= post["description"] %></p>
    </li>
  
  <% end %>
</ul>


<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

